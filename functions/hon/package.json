{
	"name": "hon",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite",
		"build": "pnpm build:tailwind && vite build",
		"build:tailwind": "tailwindcss -i src/tailwind.css -o dist/client/tailwind.css",
		"buildp": "pnpm build:tailwind && CLOUDFLARE_ENV=production vite build",
		"preview": "vite preview",
		"clean": "rm -rf node_modules && rm -rf .wrangler",
		"typecheck": "tsc --noEmit",
		"typegen": "wrangler types",
		"tail:PRODUCTION": "wrangler tail hon-production"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "catalog:",
		"@tailwindcss/cli": "catalog:",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "catalog:",
		"@types/node": "^22.13.10",
		"daisyui": "catalog:",
		"jsonc-parser": "^3.3.1",
		"tailwindcss": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"wrangler": "catalog:",
		"zx": "^8.3.1"
	},
	"dependencies": {
		"@aws-sdk/client-ses": "catalog:",
		"@openauthjs/openauth": "catalog:",
		"@paralleldrive/cuid2": "catalog:",
		"aws4fetch": "^1.0.20",
		"effect": "catalog:",
		"hono": "catalog:",
		"stripe": "catalog:"
	}
}
